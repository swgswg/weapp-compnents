@import '/components/icon/icon1/iconfont.wxss';

page{
    line-height:1.6;
    font-family:-apple-system-font,Helvetica Neue,sans-serif
}

.flex-center{
    display:flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.flex-column-center{
    display:flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.flex-start{
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
}

.flex-end{
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    align-items: center;
}

.flex-around{
    display:flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center; 
}

.flex-between{
    display:flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.inline-flex{
    display: inline-flex;
}

.inline-flex-center{
    display: inline-flex;
    justify-content: center;
    align-items: center;
}

.column{
    flex-direction: column;
}

.jc-center{
    justify-content: center;
}

ai-center{
    align-items: center;
}

.nowrap{
    flex-wrap: nowrap;
}

.w100{
    width: 100%;
}
.w90{
    width: 90%;
}
.w80{
    width: 80%;
}

.w50{
    width: 50%;
}

.btn:active {
    color: #666;
}

.m10{
    margin: 10rpx;
}

.mr10{
    margin-right: 10rpx;
}

.mt20{
    margin-top: 20rpx;
}

.mr20{
    margin-right:20rpx;
}

.ptb10{
    padding:10rpx 0;
    box-sizing: border-box;
}

.p20{
    padding: 20rpx;
    box-sizing: border-box;
}

.plr20{
    padding: 0 20rpx;
    box-sizing: border-box;
}

.ptb20{
    padding: 20rpx 0;
    box-sizing: border-box;
}

.border{
    border:1rpx solid red;
}

.border-bottom{
    border-bottom: 1rpx solid #ccc;
}


.primary{
    color:#fff!important;
    background:#0082d5!important;
}

.ghost{
    color:#495060!important;
    border: 1rpx solid #f0f0f0;
}

.success{
    color:#fff!important;
    background:#04be5b!important;
}

.warning{
    color:#fff!important;
    background:#ff9948!important;
}

.error{
    color:#fff!important;
    background:#ed3f14!important;
}

.info{
    color:#fff!important;
    background:#2db7f5!important;
}

.disabled{
    color:#bbbec4!important;
    background:#f7f7f7!important
}
