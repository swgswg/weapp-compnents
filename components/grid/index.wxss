@import '/static/css/common.wxss';

.container{
    border-top: 1px solid #ccc;
    border-left: 1px solid #ccc;
}

.grid-container{
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
}

.grid-item{
    position:relative;
    display:flex;
    justify-content: center;
    align-items: center;
}

.grid-content{
    position:relative;
    width: 100%;
    display:flex;
    flex-direction:column;
    justify-content: center;
    align-items: center;
    padding:20rpx 0 30rpx;
    border-right: 1px solid #ccc;
    border-bottom: 1px solid #ccc;
}

.grid-text{
    display:block;
    color:#888;
    font-size:20px;
    line-height:20px;
}
